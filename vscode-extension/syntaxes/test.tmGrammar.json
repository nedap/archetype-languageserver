{
	"scopeName": "source.test",
	"patterns": [{ "include": "#basics" }],
	"repository": {
		"basics": {
			"patterns": [
				{ "include": "#comment" },			
				{ "include": "#odinStart"  }
			]
		},
	  	"comment": {
			"name": "comment",
			"match": "--.*$"
		},
		"string": {
			"name": "string.doubleQuoted",
			"match": "\"[^\"]*?\""
		},

		"odinStart": {
			"name": "meta.odin.start",
			"begin": "<",
			"end": ">",
			"beginCaptures": {
				"0": "punctuation.start"
			},
			"endCaptures": {
				"0": "punctuation.end"
			},
			"patterns": [{"include": "#odinPrimitive"}, {"include": "#odinStart"}, {"match": ",", "name":"operator"}]
		},		
		"odinPrimitive": {			
			"patterns": [
				{"include": "#comment"},
				{"include": "#string"}			
			]
		}
	}
}
	  
  
	