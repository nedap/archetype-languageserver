{
	"name": "lsp-sample",
	"description": "A language server example",
	"author": "Microsoft Corporation",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/Microsoft/vscode-extension-samples"
	},
	"publisher": "vscode-samples",
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.43.0"
	},
	"activationEvents": [
		"onLanguage:plaintext"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "ADL configuration",
			"properties": {				
			}
		},
		"languages": [
			{
			  "id": "ADL",
			  "extensions": [".adls", ".adlt", ".adlf", ".adl", ".adl2"]
			},
			{
				"id": "TEST",
				"extensions": [".test"]
			  }
		  ],
		  "grammars": [
			{
			  "language": "ADL",
			  "scopeName": "source.adl",
			  "path": "./syntaxes/adl.tmGrammar.json"
			},
			{
				"language": "TEST",
				"scopeName": "source.test",
				"path": "./syntaxes/test.tmGrammar.json"
			  }
		  ]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"postinstall": "cd client && npm install",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^5.2.7",
		"mocha": "^6.2.2",
		"@types/node": "^12.12.0",
		"eslint": "^6.4.0",
		"@typescript-eslint/parser": "^2.3.0",
		"typescript": "^3.9.4"
	}
}
